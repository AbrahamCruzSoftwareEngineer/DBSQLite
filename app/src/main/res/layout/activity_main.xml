<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:text="TEAM DATA BASE" />

    <EditText
        android:id="@+id/a_main_editText_TEAM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEAM"
        android:textColor="@color/colorAccent"
        />
    <EditText
        android:id="@+id/a_main_editText_GOALS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="GOALS"/>
    <EditText
        android:id="@+id/a_main_editText_LOGO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="LOGO"
        android:layout_margin="10dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:onClick="UploadInfo"
        android:text="Actualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:background="#4dd2ff"
        android:layout_margin="10dp"/>

    <Button
        android:onClick="ReadInfo"
        android:text="Lectura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:background="#00e6e6"
        android:layout_margin="10dp"/>
</LinearLayout>
</LinearLayout>
